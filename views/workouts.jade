extends layout

block content
  #wrapper
      nav.navbar.navbar-default.navbar-cls-top(role='navigation', style='margin-bottom: 0')
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.sidebar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') WORK MO TO!
        .header-right
          a.btn.btn-info(href='message-task.html', title='New Message')
            b 30 
            i.fa.fa-envelope-o.fa-2x
          a.btn.btn-primary(href='message-task.html', title='New Task')
            b 40 
            i.fa.fa-bars.fa-2x
          a.btn.btn-danger(href='login.html', title='Logout')
            i.fa.fa-exclamation-circle.fa-2x
      // /. NAV TOP
      nav.navbar-default.navbar-side(role='navigation')
        .sidebar-collapse
          ul#main-menu.nav
            li
              a(href='/admin')
                i.fa.fa-dashboard
                | Dashboard
            li
              a.active-menu-top(href='#')
                i.fa.fa-yelp
                | Pages 
                span.fa.arrow
              ul.nav.nav-second-level.collapse.in
                li
                  a.active-menu(href='/workouts')
                    i.fa.fa-coffee
                    | Data Table
                li
                  a(href='/updates')
                    i.fa.fa-flash
                    | Add Data
      // /. NAV SIDE
      #page-wrapper
        #page-inner
          .row
            .col-md-12
              h1.page-head-line Data Table
              h1.page-subhead-line 
          .row
            .col-md-12
              .main-box.mb-dull
                .table-responsive
                  table.table.table-striped.table-bordered.table-hover
                    thead
                      tr
                        th ID #
                        th Workout Name
                        th Main Muscle
                        th Detailed Muscle
                        th Other Muscle
                        th Type
                        th Mechanics
                        th Equipment
                        th Difficulty
                        th Date Modified
                    tbody
                      for workout in workouts
                        tr
                          td 
                            a(href='/workout/' + workout._id ) #{workout._id}
                          td #{workout.name}
                          td #{workout.MMG}
                          td #{workout.DMG}
                          td #{workout.OMG}
                          td #{workout.type}
                          td #{workout.mechanics}
                          td #{workout.equipment}
                          td #{workout.difficulty}
                          td #{workout.date}
          
          // /. ROW
        // /. PAGE INNER
      // /. PAGE WRAPPER
    // /. WRAPPER

  

 
  

 