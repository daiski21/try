extends layout

block content
  #wrapper
      nav.navbar.navbar-default.navbar-cls-top(role='navigation', style='margin-bottom: 0')
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.sidebar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') WORK MO TO!
        .header-right
          a.btn.btn-info(href='message-task.html', title='New Message')
            b 30 
            i.fa.fa-envelope-o.fa-2x
          a.btn.btn-primary(href='message-task.html', title='New Task')
            b 40 
            i.fa.fa-bars.fa-2x
          a.btn.btn-danger(href='login.html', title='Logout')
            i.fa.fa-exclamation-circle.fa-2x
      // /. NAV TOP
      nav.navbar-default.navbar-side(role='navigation')
        .sidebar-collapse
          ul#main-menu.nav
            li
              a(href='/admin')
                i.fa.fa-dashboard
                | Dashboard
            li
              a.active-menu-top(href='#')
                i.fa.fa-yelp
                | Pages 
                span.fa.arrow
              ul.nav.nav-second-level.collapse.in
                li
                  a.active-menu(href='/workouts')
                    i.fa.fa-coffee
                    | Add Data
                li
                  a(href='/updates')
                    i.fa.fa-flash
                    | Data Table
            li
              a(href='/gallery')
                i.fa.fa-flash
                | Gallery
      // /. NAV SIDE
      #page-wrapper
        #page-inner
          .row
            .col-md-12
              h1.page-head-line DASHBOARD
              h1.page-subhead-line This is dummy text , you can replace it with your original text. 
          .row
            .col-md-2
            .col-md-8
              .main-box.mb-red
                h1 New Workout
                form(method="POST", action="/workouts")
                  p
                    input.form-control(type="text", placeholder="Name", name="workout_name")
                  p
                    input.form-control(type="text", placeholder="Youtube Link", name="youtube_link")
                  p
                    textarea.form-control(placeholder="Steps", name="steps")
                  P 
                    input.form-control(type="text", placeholder="Main Muscle Group", name="MMG")  
                  P
                    input.form-control(type="text", placeholder="Detailed Muscle Group", name="DMG")
                  P
                    input.form-control(type="text", placeholder="Other Muscle Group", name="OMG")
                  P
                    input.form-control(type="text", placeholder="Type", name="typetype")
                  P
                    input.form-control(type="text", placeholder="Mechanics", name="mechanics")
                  P
                    input.form-control(type="text", placeholder="Equipment", name="equipment")
                  P
                    input.form-control(type="text", placeholder="Difficulty", name="difficulty")        
                  button(type="submit") Submit
          .row
            .col-md-12
              .main-box.mb-dull
                .table-responsive
                  table.table.table-striped.table-bordered.table-hover
                    thead
                      tr
                        th ID #
                        th Workout Name
                        th Main Muscle
                        th Detailed Muscle
                        th Other Muscle
                        th Type
                        th Mechanics
                        th Equipment
                        th Difficulty
                    tbody
                      each workout in workouts
                        tr
                          td 
                            a(href='/workout/' + workout._id ) #{workout._id}
                          td #{workout.name}
                          td #{workout.MMG}
                          td #{workout.DMG}
                          td #{workout.OMG}
                          td #{workout.type}
                          td #{workout.mechanics}
                          td #{workout.equipment}
                          td #{workout.difficulty}
          
          // /. ROW
        // /. PAGE INNER
      // /. PAGE WRAPPER
    // /. WRAPPER

  

 